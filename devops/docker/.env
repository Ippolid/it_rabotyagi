# PostgreSQL Database
PG_DATABASE_NAME=it_rabotyagi
PG_USER=it_rabotyagi-user
PG_PASSWORD=it_rabotyagi-password
PG_PORT=54321
MIGRATION_DIR=./migrations

PG_DSN="host=pg-local port=5432 dbname=it_rabotyagi user=it_rabotyagi-user password=it_rabotyagi-password sslmode=disable"
MIGRATION_DSN="host=pg-local port=5432 dbname=it_rabotyagi user=it_rabotyagi-user password=it_rabotyagi-password sslmode=disable"
PG_DSN_LOGER="host=pg-local port=5432 dbname=it_rabotyagi user=it_rabotyagi-user password=it_rabotyagi-password sslmode=disable"
DATABASE_URL="host=pg-local port=5432 dbname=it_rabotyagi user=it_rabotyagi-user password=it_rabotyagi-password sslmode=disable"

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CONNECTION_TIMEOUT_SEC=10
REDIS_MAX_IDLE=10
REDIS_IDLE_TIMEOUT_SEC=300

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
SERVER_PORT=8080

#Logger
LOGGER_LEVEL=debug

# Public URL (для OAuth callbacks через ngrok или домен)
# Измените на ваш ngrok URL, например: https://xxxx-xx-xxx-xxx-xx.ngrok-free.app
PUBLIC_URL=http://localhost:8080

# Swagger
SWAGGER_HOST=0.0.0.0
SWAGGER_PORT=8090

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production